<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.ifedorenko.m2e</groupId>
  <artifactId>com.ifedorenko.m2e.sourcelookup-parent</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <properties>
    <tycho.version>0.14.0-SNAPSHOT</tycho.version>
  </properties>

  <repositories>
    <repository>
      <id>m2e-1.1-latest</id>
      <url>https://repository.sonatype.org/content/repositories/forge-sites/m2e/1.1.0/N/LATEST/</url>
      <layout>p2</layout>
    </repository>
    <repository>
      <id>m2e-extras</id>
      <url>https://repository.sonatype.org/content/repositories/forge-sites/m2e-extras/0.15.0/N/0.15.0.201109290002/</url>
      <layout>p2</layout>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>tycho-snapshots</id>
      <url>https://oss.sonatype.org/content/groups/public/</url>
    </pluginRepository>
  </pluginRepositories>

  <modules>
    <module>com.ifedorenko.m2e.sourcelookup</module>
    <module>com.ifedorenko.m2e.sourcelookup.feature</module>
    <module>com.ifedorenko.m2e.sourcelookup.target</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho.version}</version>
        <extensions>true</extensions>
      </plugin>

      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>target-platform-configuration</artifactId>
        <version>${tycho.version}</version>
        <configuration>
          <target>
            <artifact>
              <groupId>com.ifedorenko.m2e</groupId>
              <artifactId>com.ifedorenko.m2e.sourcelookup.target</artifactId>
              <version>${project.version}</version>
              <classifier>eclipse</classifier>
            </artifact>
          </target>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>